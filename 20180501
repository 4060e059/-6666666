#include <cstdlib>
#include <iostream>

using namespace std;
float sarea(float pi, int r){
      return 4*pi*r*r;
      }
float svolumn(float pi, int r){
      return 4*pi*r*r*r/3;
      }
int main(int argc, char *argv[])
{
    float pi = 3.1415926;
    int r = 5;
    
    cout << "表面積: " << sarea(pi,r) << endl;
    cout << "體積: " << svolumn(pi,r) << endl;
     
    
    system("PAUSE");
    return EXIT_SUCCESS;
}
